<script>
  // Personalize (edit values here or directly in HTML)
  const data = {
    name: '–î–æ–ª–≥–∏—Ö –ò–ª—å—è',
    role: '–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫ ¬∑ –ê–≤—Ç–æ–º–∞—Ç–∏–∑–∞—Ü–∏—è ¬∑ –°–∞–π—Ç—ã',
    phone: '+7 (999) 000-00-00',
    phoneHref: '+79990000000',
    email: 'hello@example.com',
    location: '–ö—Ä–∞—Å–Ω–æ—è—Ä—Å–∫, –†–æ—Å—Å–∏—è',
    telegram: 'https://t.me/your_handle'
  };

  // populate
  document.getElementById('personName').textContent = data.name;
  document.getElementById('hiName').textContent = data.name.split(' ')[0] || data.name;
  document.getElementById('personRole').textContent = data.role;
  document.getElementById('phoneLink').textContent = data.phone;
  document.getElementById('phoneLink').href = 'tel:' + data.phoneHref;
  document.getElementById('callBtn').href = 'tel:' + data.phoneHref;
  document.getElementById('emailLink').textContent = data.email;
  document.getElementById('emailLink').href = 'mailto:' + data.email;
  document.getElementById('mailBtn').href = 'mailto:' + data.email;
  document.getElementById('locationText').textContent = data.location;
  document.getElementById('tgLink').href = data.telegram;
  document.getElementById('year').textContent = new Date().getFullYear();

  // vCard generation & download
  document.getElementById('downloadVcard').addEventListener('click', () => {
    const vcard =
`BEGIN:VCARD
VERSION:3.0
FN:${data.name}
ORG:${data.name}
TEL;TYPE=CELL:${data.phoneHref}
EMAIL;TYPE=INTERNET:${data.email}
ADR;TYPE=WORK:;;${data.location};;;
END:VCARD`;
    const blob = new Blob([vcard], {type: 'text/vcard'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = (data.name.replace(/\s+/g,'_') || 'contact') + '.vcf';
    document.body.appendChild(a);
    a.click();
    a.remove();
    URL.revokeObjectURL(url);
  });

  // theme toggle
  const themeToggle = document.getElementById('themeToggle');
  themeToggle.addEventListener('click', () => {
    if(document.body.classList.contains('light')){
      document.body.classList.remove('light');
      themeToggle.textContent = '–°–≤–µ—Ç–ª–∞—è —Ç–µ–º–∞';
    } else {
      document.body.classList.add('light');
      themeToggle.textContent = '–¢—ë–º–Ω–∞—è —Ç–µ–º–∞';
    }
  });

  // contact form: open mailto with prefilled body (simple fallback)
  function sendMail(e){
    e.preventDefault();
    const name = encodeURIComponent(document.getElementById('inpName').value.trim());
    const email = encodeURIComponent(document.getElementById('inpEmail').value.trim());
    const msg = encodeURIComponent(document.getElementById('inpMsg').value.trim());
    const subject = encodeURIComponent('–ó–∞–ø—Ä–æ—Å —Å —Å–∞–π—Ç–∞ –æ—Ç ' + (name || '–ü–æ—Å–µ—Ç–∏—Ç–µ–ª—è'));
    const body = encodeURIComponent(`–ò–º—è: ${decodeURIComponent(name)}%0AEmail: ${decodeURIComponent(email)}%0A%0A${decodeURIComponent(msg)}`);
    const mailto = `mailto:${data.email}?subject=${subject}&body=${body}`;
    window.location.href = mailto;
    return false;
  }

  // Optional: quick drag & drop to change avatar image (for local editing)
  const avatar = document.getElementById('avatar');
  avatar.addEventListener('click', () => {
    const url = prompt('–í—Å—Ç–∞–≤—å—Ç–µ URL –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è (–∏–ª–∏ –æ—Å—Ç–∞–≤—å—Ç–µ –ø—É—Å—Ç—ã–º):');
    if(url) {
      avatar.innerHTML = '<img src="'+url.replace(/"/g,'')+'" alt="–§–æ—Ç–æ">';
    }
  });
</script>
